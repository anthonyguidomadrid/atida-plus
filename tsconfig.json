{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~assets/*": [
        "./src/assets/*"
      ],
      "~components/*": [
        "./src/components/*"
      ],
      "~config/*": [
        "./src/config/*"
      ],
      "~domains/*": [
        "./src/domains/*"
      ],
      "~generated-graphql": [
        "./src/generated/graphql"
      ],
      "~helpers": [
        "./src/helpers"
      ],
      "~helpers/*": [
        "./src/helpers/*"
      ],
      "~page-variants": [
        "./src/page-variants"
      ],
      "~pages/*": [
        "./src/pages/*"
      ],
      "~test-helpers": [
        "./src/test-helpers"
      ],
      "~types/*": [
        "./src/types/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "contentful-apps"
  ]
}
